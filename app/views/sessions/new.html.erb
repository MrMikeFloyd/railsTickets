<% provide(:title, "Anmelden") %>
<h1>Anmelden</h1>

<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= form_for(:session, url: login_path) do |f| %>

      <%= f.label "Email" %>
      <%= f.email_field :email, class: 'form-control' %>

      <%= f.label "Passwort" %>
      <%= link_to "(Passwort vergessen)", new_password_reset_path %>
      <%= f.password_field :password, class: 'form-control' %>

      <%= f.label :remember_me, class: "checkbox inline" do %>
        <%= f.check_box :remember_me %>
        <span>Anmeldung auf diesem Computer speichern</span>
      <% end %>

      <%= f.submit "Anmelden", class: "btn btn-primary" %>
    <% end %>

    <p>Noch kein Benutzerkonto? <%= link_to "Neues Konto erstellen", signup_path %></p>
  </div>
</div>