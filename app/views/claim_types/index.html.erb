<p id="notice"><%= notice %></p>

<h1>Claim Types</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Description</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @claim_types.each do |claim_type| %>
      <tr>
        <td><%= claim_type.name %></td>
        <td><%= claim_type.description %></td>
        <td><%= link_to 'Show', claim_type %></td>
        <td><%= link_to 'Edit', edit_claim_type_path(claim_type) %></td>
        <td><%= link_to 'Destroy', claim_type, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

