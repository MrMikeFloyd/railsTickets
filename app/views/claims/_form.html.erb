<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= form_for(@claim) do |f| %>
        <%= render 'shared/error_messages', object: f.object %>

        <%= f.label "Beschreibung" %>
        <%= f.text_field :description, class: 'form-control' %>

        <%= f.submit "Aktualisieren", class: "btn btn-primary" %>
    <% end %>
  </div>
</div>