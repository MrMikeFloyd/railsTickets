<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= form_for(@claim) do |f| %>
        <%= render 'shared/error_messages', object: f.object %>

        <%= f.label "Claimtyp" %>
        <%= f.collection_select(:claim_type_id, ClaimType.all, :id, :name, {}, {:class => "form-control"}) %>

        <%= f.label "Beschreibung" %>
        <%= f.text_field(:description, class: 'form-control') %>
        <%= f.submit "Speichern", class: "btn btn-primary" %>
    <% end %>
  </div>
</div>
<div class="row top5">
  <div class="col-md-6 col-md-offset-3">
    <%= link_to 'Abbrechen', claims_path, class:"btn btn-default btn-block" %>
  </div>
</div>


