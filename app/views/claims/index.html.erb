<p id="notice"><%= notice %></p>

<h1>Claims</h1>

<table>
  <thead>
    <tr>
      <th>Description</th>
      <th colspan="3"></th>
    </tr>
  </thead>

<%= will_paginate %>

<ul class="users">

  <ul class="claims">
    <% @claims.each do |claim| %>
        <li><%= claim.description %></li>
        <li><%= link_to 'Show', claim %></li>
        <li><%= link_to 'Edit', edit_claim_path(claim) %></li>
        <li><%= link_to 'Destroy', claim, method: :delete, data: { confirm: 'Are you sure?' } %></li>
    <% end %>
  </ul>



</ul>

<%= will_paginate %>

<%= link_to 'New Claim', new_claim_path %>
