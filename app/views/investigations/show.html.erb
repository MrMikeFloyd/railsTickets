<p id="notice"><%= notice %></p>

<h1>Recherche-Details</h1>
<hr />

<div class="container">
  <% unless @resultData.blank? %>
      <table class="table table-hover">
        <thead>
        <tr>
          <th>ShptReq-Nr</th>
          <th>Colli-Nr</th>
          <th>TE-Nr</th>
          <th>Part-Nr</th>
          <th>Verladedatum</th>
          <th>Verladezeit</th>
        </tr>
        </thead>
        <tbody>
          <% @resultData.each do |row| %>
              <tr>
                <td><%= row.fetch("shpt_req_nr") %></td>
                <td><%= row.fetch("colli_nr") %></td>
                <td><%= row.fetch("te_nr") %></td>
                <td><%= row.fetch("part_nr") %></td>
                <td><%= row.fetch("verl_dt") %></td>
                <td><%= row.fetch("verl_zt") %></td>
              </tr>
          <% end  %>
        </tbody>
      </table>

  <% else %>
      <p>Das Ergebnisdokument ist leer - keine Daten verfügbar.</p>
  <% end %>
</div>


<%= link_to 'Zurück', @investigation.claim, class: "btn btn-primary" %>
